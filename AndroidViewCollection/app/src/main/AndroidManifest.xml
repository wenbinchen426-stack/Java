        <activity android:name=".activity.RadioButtonActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".activity.LinearLayoutActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".activity.RelativeLayoutActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".activity.FrameLayoutActivity"
